@require 'placeholder'

/**
 * Layout.
 */


 
// home.

.home
  size 64rem 40rem
  @extend $flex

.home-left
.home-right
  @extend $flex, $flexi, $flexmc, $flexac, $posr

.home-justme
  @extend $flex, $flexmc, $flexac

.home-nav
  position absolute \* 50% 30% \*
  @extend $tar

.home-post
  size 25rem 16rem

.home-header
  margin 0 0 20rem 0



// blog.

.blog
  size 100%
  overflow-y auto

.blog-main
  width 40rem
  margin 0 auto
  padding 15rem 0 5rem 20rem

.blog-top
  padding 5rem 0 1rem 20rem
  @extend $posxc
  
.blog-header
  width 41rem

.blog-left
  width 20rem
  right 0
  padding 15rem 0 0
  margin 0 0 0 -25rem
  @extend $posxc

.blog-nav
.blog-logo
  margin 3rem 1.5rem 0 0
  @extend $tar



// blogs.

.blogs
  size 50rem 30rem
  @extend $flex, $flexcol

.blogs-top
  flex 0 0 8rem
  @extend $posr

.blogs-header
  height 100%
  @extend $flex, $flexmc, $flexac

.blogs-nav
  position absolute -5rem 0
  @extend $tar

.blogs-main
  padding 0 0 0 8rem
  @extend $flex, $flexmc, $flexac, $flexcol, $flexi, $posr

.blogs-item
  width 20rem
  margin 0.5rem 0

.blogs-date
  width 5rem
  @extend $dib, $fzs

.blogs-more
  position absolute \* \* 2rem 50%

.blogs-next
.blogs-prev
  size 1rem
  margin 0.25rem
  @extend $dib, $bdc, $cur


// about.

.about
  size 64rem 100%
  overflow-y auto
  @extend $posr

.about-tr
  position absolute 0 0 \* \*

.about-header     
.about-nav
  @extend $tar

.about-nav
  padding 0 1rem 0 0
  margin 1rem 0 0 0

.about-me
  padding 10rem 5rem 25rem 5rem
  @extend $flex, $posr

.about-prop
  margin 1rem 0 0 1rem
  @extend $fzl

.about-div
  color alpha(black, 0.32)
  margin 0 1rem

.about-age
  color alpha(black, 0.56)
  top -0.15rem
  @extend $fzs, $posr

.about-sex
  color alpha(red, 0.56)
  &:before
    content: ""
    size 1rem
    border 2px solid
    top -0.4rem
    left 1.1825rem
    @extend $bdc, $dib, $posr  
  &:after
    content: "+"
    size 1rem
    left -0.01rem
    top 0.5rem
    @extend $dib, $posr

.about-tree
  position absolute \* 0 0 \*

.about-friends
  margin 5rem 0 0 0

.about-title
  @extend $fzl


// friend
  
.friend
  padding 2rem
  @extend $flex

.friend-left
  flex 0 0 8rem
  @extend $flex, $flexmc

.friend-right
  padding 1rem
  @extend $flexi

.friend-avatar
  size 6rem
  border 3px solid alpha(black, 0.16)
  overflow hidden
  @extend $bdc

.friend-name
  margin 0 0 1rem 0
  @extend $fzl

.friend-link
  margin: -0.5rem 0 1rem 0
  color alpha(black, 0.56)
  @extend $fzs

.friend-intro
  color alpha(black, 0.72)


// notfound.

.notfound-main
  @extend $flex, $flexmc, $flexac, $flexcol

.notfound-txt
  margin 2rem 0
  

  

// justme.

.justme
  width 60%
  opacity 0



// logo.

.logo
  transform translate3d(0, -1rem, 0)
  opacity 0
  @extend $flex

.logo-left
  @extend $flex, $flexmc, $flexac

.logo-right
  @extend $flex, $flexcol, $flexmc    

.logo-text
  margin 0 1rem

.logo-label
  margin 0 0 0.8rem 0



// nav.

.nav
  margin 0.5rem 0

.nav-item
  transform translate3d(-1rem, 0, 0)
  opacity 0


// photo.

.photo
  size 10rem
  border 0.4rem solid alpha(black, 0.08)