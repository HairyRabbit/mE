grey-lightx    = rgba(0, 0, 0, 0.16)
grey-light     = rgba(0, 0, 0, 0.32)
grey-normal = rgba(0, 0, 0, 0.56)
grey-dark     = rgba(0, 0, 0, 0.72)

.md
  font-size:        15px
  line-height:     1.5
  
  h1,h2,h3,h4,h5,h6,p
    margin:         0 0 1em 0
    font-weight: 400
    font-size:      1em
    
  p
    color:            grey-normal
    
  h1
    font-size:      1.5em
    color:            grey-dark

  .date
    margin:         -1.5em 0 2em 0
    font-size:      0.8em
    color:            grey-light

  .mm
    display: inline-block
    font-family: "Source Code Pro",consolas,inconsolata,monospace
    font-size: 1.5rem
    width: 3rem
    color: grey-lightx

  .dd
    display: inline-block
    font-size: 0.8rem
    width: 5rem
    color: grey-normal

  .title
    color: grey-dark