@keyframes eyes {
  0% {
    width 25px
    transform translate3d(12.5px * 3, 0, 0)
  }
  48% {
    width 25px
    transform translate3d(12.5px * 3, 0, 0)
  }
  49% {
    width 100px
    transform translate3d(0, 0, 0)
  }
  49.50% {
    width 25px
    transform translate3d(12.5px * 3, 0, 0)
  }
  50% {
    width 100px
    transform translate3d(0, 0, 0)
  }
  50.50% {
    width 25px
    transform translate3d(12.5px * 3, 0, 0)
  }
}

@keyframes ears {
  0% {
    transform skew(10deg)
  }
  25% {
    transform skew(0deg)
  }
  50% {
    transform skew(-10deg)
  }
  75% {
    transform skew(0deg)
  }
  100% {
    transform skew(10deg)
  }
}

.t
  width 25px
  transform translate3d(12.5px * 3, 0, 0)
  height 100px
  background-color pink
  display inline-block
  border-radius 50%
  animation eyes 20s ease-in-out 0s infinite

.r
  position absolute
  left 300px
  
  width 25px
  transform skew(0deg)
  height 100px
  background-color pink
  display inline-block
  border-radius 50%
  &:hover
    animation ears 0.1s ease-in-out 0s infinite
    transform-origin: center bottom 0;