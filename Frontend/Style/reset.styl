html,
body,
body > div,
body > div > div
  width:  100%
  height: 100%

body
  font-family: "Microsoft YaHei UI","Microsoft YaHei","WenQuanYi Micro Hei","Helvetica Neue",Helvetica,Arial,"Hiragino Sans GB","Hiragino Sans GB W3",sans-serif
  font-size:   16px
  line-height: 1
  margin:      0
  padding:     0

body > div,
body > div > div
  display:         flex
  justify-content: center
  align-items:     center

img
  width:  100%
  height: auto

a
  color:           inherit
  cursor:          pointer
  text-decoration: none

.listReset
  list-style-type: none
  margin:          0
  padding:         0